<?xml version="1.0" encoding="utf-8"?>
<Configuration>

    <!--These are some of the loggers you can enable. 
        There are several more you can find in the documentation. 
        Besides this log4j configuration, you can also use Java VM environment variables
        to enable other logs like network (-Djavax.net.debug=ssl or all) and 
        Garbage Collector (-XX:+PrintGC). These will be append to the console, so you will 
        see them in the mule_ee.log file. -->

    <Appenders>
        <!-- 電文ログ(略号MGまたはmsg) -->
        <RollingFile name="MG_file" fileName="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}MG_${env:MULE_APP}.log"
                 filePattern="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}MG_${env:MULE_APP}_%d{yyyy-MM-dd'T'HH-mm-ss}{GMT+0}.log">
            <PatternLayout pattern="%-5p %d [%t] [processor: %X{processorPath}; event: %X{correlationId}] %c: %m%n"/>
            <!-- <SizeBasedTriggeringPolicy size="10 MB"/> -->
            <!-- ファイル名の最小単位が「秒」なので、３秒毎にログローテート -->
            <TimeBasedTriggeringPolicy interval="${sys:myapp.logger.interval:-3}"/>
            <!-- 上記から、３秒毎にログローテートなので、３０秒間 -->
            <DefaultRolloverStrategy max="${sys:myapp.logger.maxCount:-10}"/>
        </RollingFile>
        <!-- 業務ログ(略号APまたはapp) -->
        <RollingFile name="AP_file" fileName="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}AP_${env:MULE_APP}.log"
                 filePattern="${sys:mule.home}${sys:file.separator}logs${sys:file.separator}AP_${env:MULE_APP}_%d{yyyy-MM-dd'T'HH-mm-ss}{GMT+0}.log">
            <PatternLayout pattern="%-5p %d [%t] [processor: %X{processorPath}; event: %X{correlationId}] %c: %m%n"/>
            <!-- <SizeBasedTriggeringPolicy size="10 MB"/> -->
            <!-- ファイル名の最小単位が「秒」なので、３秒毎にログローテート -->
            <TimeBasedTriggeringPolicy interval="${sys:myapp.logger.interval:-3}"/>
            <!-- 上記から、３秒毎にログローテートなので、３０秒間 -->
            <DefaultRolloverStrategy max="${sys:myapp.logger.maxCount:-10}"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Http Logger shows wire traffic on DEBUG -->
        <AsyncLogger name="org.mule.service.http.impl.service.HttpMessageLogger" level="DEBUG" additivity="false">
            <AppenderRef ref="MG_file"/>
        </AsyncLogger>
        <!-- 以下は、無限ループ防止のために必要。 -->
        <AsyncLogger name="org.mule.service.http.impl.service.HttpMessageLogger.Amazon_S3_Config" level="INFO"/>

        <AsyncLogger name="org.mule.service.http" level="WARN"/>
        <AsyncLogger name="org.mule.extension.http" level="WARN"/>

        <!-- Mule logger -->
        <AsyncLogger name="org.mule.runtime.core.internal.processor.LoggerMessageProcessor" level="INFO"/>

        <AsyncRoot level="INFO">
            <AppenderRef ref="AP_file"/>
        </AsyncRoot>
    </Loggers>

</Configuration>
